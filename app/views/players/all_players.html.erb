<h1>Players</h1>

<table cellspacing="15">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Club Id</th>
      <th>Position</th>
      <th>Number</th>
      <th>Age</th>
      <th>Country</th>
      <th>Contract until</th>
      <th>Market value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td><%= player.name %></td>
        <td><%= player.club_id %></td>
        <td><%= player.position %></td>
        <td><%= player.number %></td>
        <td><%= player.age %></td>
        <td><%= player.country %></td>
        <td><%= player.contract_until %></td>
        <td>â‚¬<%= number_with_precision(player.market_value, precision: 2) %><%= player.cost_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>

