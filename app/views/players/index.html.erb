<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table cellspacing="15">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Position</th>
      <th>Number</th>
      <th>Age</th>
      <th>Height</th>
      <th>Foot</th>
      <th>Country</th>
      <th>Joined</th>
      <th>Contract until</th>
      <th>Last Club</th>
      <th>Market value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournament_club.players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td><%= player.name %></td>
        <td><%= player.position %></td>
        <td><%= player.number %></td>
        <td><%= player.age %></td>
        <td><%= player.height %> m</td>
        <td><%= player.foot %></td>
        <td><%= player.country %></td>
        <td><%= player.joined %></td>
        <td><%= player.contract_until %></td>
        <td><%= player.last_club %></td>
        <td>â‚¬<%= "#{'%.2f' % player.market_value}" %>m</td>
        <td><%= link_to 'Show', [player.tournament_club, player] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

